<header style="padding-top: 20px;">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <h1 class="mb-3">編輯餐廳資訊</h1>
        <a
          href="/restaurants/{{restaurant.id}}"
          class="btn btn-secondary mb-3"
        >回餐廳資訊</a>
      </div>
    </div>
  </div>
</header>

<form action="/restaurants/{{restaurant.id}}?_method=PUT" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-2">
          <span class="text-secondary">
            <i class="fas fa-house pr-2"></i>
            餐廳名稱
          </span>
          <input
            type="text"
            name="name"
            value="{{restaurant.name}}"
            class="form-control"
          />
        </p>

        <p class="mb-2">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別
          </span>
          <input
            type="text"
            name="category"
            value="{{restaurant.category}}"
            class="form-control"
          />
        </p>

        <p class="mb-2">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址
          </span>
          <input
            type="text"
            name="location"
            value="{{restaurant.location}}"
            class="form-control"
          />
        </p>

        <p class="mb-2">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話
          </span>
          <input
            type="text"
            name="phone"
            value="{{restaurant.phone}}"
            class="form-control"
          />
        </p>

        <p class="mb-5">
          <span class="text-secondary">
            <i class="fas fa-circle-info pr-2"></i>
            簡介
          </span>
          <textarea
            name="description"
            class="form-control"
            rows="5"
          >{{restaurant.description}}</textarea>
        </p>

        <img
          class="rounded mx-auto d-block mb-4 w-100"
          src="{{restaurant.image}}"
          alt="{{restaurant.name}}"
          style="max-width: 600px;"
        />
        <input type="hidden" name="image" value="{{restaurant.image}}" />

        <div class="form-group text-center">
          <button type="submit" class="btn btn-success">儲存</button>
        </div>

      </div>
    </div>
  </div>
</form>