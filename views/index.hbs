<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img
          src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt="我的餐廳清單"
        />
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            aria-describedby="search-button"
            value="{{keyword}}"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">

      <div class="mb-3 d-flex justify-content-between align-items-center">
        <a href="/restaurants/new" class="btn btn-success">新增餐廳</a>
      </div>

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        {{#each restaurants as |restaurant|}}
          <div class="mb-3">
            <a href="/restaurants/{{restaurant.id}}" class="text-secondary">
              <div class="card d-flex flex-column">
                <img
                  class="card-img-top"
                  src="{{getImage restaurant.image}}"
                  alt="{{restaurant.name}}"
                />
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{restaurant.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i>
                    {{restaurant.category}}
                  </div>

                  <span class="badge rounded-pill bg-danger font-weight-normal">
                    {{getRating restaurant.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
              </div>
            </a>
            <div class="card-footer d-flex justify-content-sm-start mt-2">
              <a
                href="/restaurants/{{restaurant.id}}/edit"
                class="btn btn-primary"
                style="font-size: 15px; padding: 3px 6px; margin-left: 8px; margin-right: 8px;"
              >編輯</a>
              <a
                id="delete-{{restaurant.id}}"
                href="#"
                class="btn btn-danger"
                style="font-size: 15px; padding: 3px 6px"
                onclick="confirmDelete('{{restaurant.id}}', '{{restaurant.name}}', event)"
              >刪除</a>

            </div>
          </div>

        {{/each}}

      </div>
    </div>
  </div>
</div>

{{! ========== Script ========== }}
<script src="/javascripts/index.js"></script>